<p id="notice"><%= notice %></p>

<h1>Listing Accounts</h1>
<% if user_signed_in? %>
<h3>Login with <%= current_user.user_name %></h3>
<% end %>

<%= link_to "User", welcomes_index_path %>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
<%= will_paginate @posts %>
  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.account_name %> </td>
        <td><%= account.account_role %></td>
        <td><%= link_to 'Show', account %></td>
        <td><%= link_to 'Edit', edit_account_path(account) %></td>
        <td><%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>You just create <%= cookies[:current_account] %></p>

<br>

<%= link_to 'New Account', new_account_path %>
